{
  "manifest_version": 3,
  "web_accessible_resources": [
    {
      "resources": ["WhatToDo/whattodo.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "name": "WhatToDo",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],  
      "js": ["content.js"],
      "css": ["whattodo.css"]
    }
  ],
  "icons": {
    "16": "whattodo.png",
    "48": "whattodo.png",
    "128": "whattodo.png"
  }
}
